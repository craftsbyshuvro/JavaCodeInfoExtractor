<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="%actionSet.label"
            visible="true"
            id="MyFirstPlugin.actionSet">
         <menu
               label="%menu.label"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="%action.label"
               icon="icons/sample.gif"
               class="myfirstplugin.actions.SampleAction"
               tooltip="%action.tooltip"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="myfirstplugin.actions.SampleAction">
         </action>
      </actionSet>
   </extension>

</plugin>
